@page

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>1x1 Matrix</title>
</head>
<body>
    <style>
        body {
            font-family: 'Comic Sans MS', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .line {
            display: flex;
            flex-direction: row;
            width: 300px;
            line-height: 4.5rem;
            justify-content: space-between;
            
            font-size: 4rem;
            font-weight: bold;
            text-shadow: 2px 2px 4px darkgray;
        }

        .letter-a, .letter-e, .letter-i, .letter-o, .letter-u {
            color: red;
        }

        .letter-b, .letter-m, .letter-q, .letter-z {
            color: yellow;
        }

        .letter-c, .letter-l, .letter-n, .letter-v {
            color: blue;
        }

        .letter-d, .letter-g, .letter-s, .letter-w {
            color: green;
        }

        .letter-f, .letter-k, .letter-t {
            color: plum;
        }

        .letter-h, .letter-p, .letter-x {
            color: orange;
        }

        .letter-j, .letter-r, .letter-y {
            color: darkviolet;
        }
    </style>
    <div>
    @{
        string[][] letters = {
                    new string[] { "A", "B", "C", "D", "E" },
                    new string[] { "F", "G", "H", "I", "J" },
                    new string[] { "K", "L", "M", "N", "O" },
                    new string[] { "P", "Q", "R", "S", "T", "U" },
                    new string[] { "V", "W", "X", "Y", "Z" },
            };

        foreach (string[] row in letters)
        {
            <div class="line">
                @foreach (string letter in row)
                {
                    <span class="letter-@letter.ToLower()">@letter</span>
                }
            </div>
        }
    }
    </div>
</body>
</html>
