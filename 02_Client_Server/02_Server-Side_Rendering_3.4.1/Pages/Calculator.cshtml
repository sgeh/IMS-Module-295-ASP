@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calculator</title>
    <link rel="stylesheet" href="~/styles/index.css">
</head>
<body>
    <h1>Calculator</h1>
    @{
        if (!Request.HasFormContentType)
        {
            <form action="~/calculator" method="post">
                <div>
                    <label>
                        <div>Left Operand:</div>
                        <input type="number" name="left-op" value="" step="0.00000000000001" required>
                    </label>
                </div>
                <div>
                    <label>
                        <div>Operator:</div> +
                    </label>
                </div>
                <div>
                    <label>
                        <div>Right Operand:</div>
                        <input type="number" name="right-op" value="" step="0.00000000000001" required>
                    </label>
                </div>
                <button>Calculate</button>
            </form>
        }
        else
        {
            try
            {
                string leftOp = Request.Form["left-op"];
                string rightOp = Request.Form["right-op"];
                double leftOpAsDouble = Convert.ToDouble(leftOp);
                double rightOpAsDouble = Convert.ToDouble(rightOp);
                double result = leftOpAsDouble + rightOpAsDouble;

                <div>
                    <label>
                        <div>Resultat:</div>
                        <span>@result</span>
                    </label>
                </div>
            }
            catch
            {
                <div>Ungültige Eingabe!</div>
            }
        }       
    }
</body>
</html>
